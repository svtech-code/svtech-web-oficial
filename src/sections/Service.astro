---
import ServiceCard from 'components/ServiceCard.astro';
import { subTitleService, titleSerive } from 'consts/pagesTitle';

import { SERVICE } from 'consts/service';
import type { Service } from 'types/service';
---

<section
  id="services"
  class="relative flex w-full max-w-[1200px] scroll-mt-28 flex-col items-center justify-center gap-20 md:scroll-mt-36"
>
  <header class="flex w-[90%] flex-col items-center justify-center gap-4 text-center md:w-[100%]">
    <h2 class="text-secondary text-xl font-bold uppercase duration-300 sm:text-4xl md:text-5xl">
      {titleSerive}
    </h2>
    <h3 class="text-primary text-md font-medium sm:text-lg md:text-3xl">{subTitleService}</h3>
  </header>

  <div
    class="relative flex w-full flex-col flex-wrap items-center justify-center gap-6 pb-64 md:flex-row"
  >
    {
      SERVICE.map(({ title, description, icon }) => (
        <ServiceCard title={title} description={description} icon={icon} />
      ))
    }
  </div>
</section>
