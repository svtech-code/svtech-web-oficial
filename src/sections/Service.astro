---
import ServiceCard from 'components/ServiceCard.astro';
import SubTitle from 'components/ui/SubTitle.astro';
import Title from 'components/ui/Title.astro';
import { subTitleService, titleSerive } from 'consts/pagesTitle';

import { SERVICE } from 'consts/service';
import type { Service } from 'types/service';
---

<section class="relative flex w-full max-w-[1200px] flex-col items-center justify-center">
  <header>
    <Title title={titleSerive} />
    <SubTitle subTitle={subTitleService} />
  </header>

  <section class="relative grid w-full grid-cols-3 place-items-center gap-8 pb-32 pt-20">
    {
      SERVICE.map(({ title, description, icon }: Service) => (
        <ServiceCard title={title} description={description} icon={icon} />
      ))
    }
  </section>
</section>
