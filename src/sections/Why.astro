---
import { smallTitleWhy, textWhy, titleWhy } from 'consts/pagesTitle';
import IconCheck from 'assets/svg/check.svg';

const charaters = ['Atención personalizada', 'Innovación y calidad', 'Soporte continuo'];
---

<section class="relative flex w-full flex-col items-center justify-center gap-4 bg-black/60 py-48">
  <div class="relative grid max-w-[1200px] grid-cols-2 gap-7">
    <div class="">
      <header class="max-w-[35rem]">
        <p class="bg-primary inline-block rounded-2xl p-1 px-2">{smallTitleWhy}</p>
        <h3 class="mt-5 text-5xl font-bold">{titleWhy}</h3>
      </header>

      <p class="text-secondary-size mt-12 font-medium">{textWhy}</p>

      <ul class="ml-5 flex flex-col gap-5 pt-8 text-lg font-semibold">
        {
          charaters.map((item) => (
            <li class="flex items-center gap-2">
              <IconCheck width={40} height={40} /> {item}
            </li>
          ))
        }
      </ul>
    </div>

    <div class="flex h-full w-full items-center justify-center">
      <img
        src="images/img-why.webp"
        alt="Imagen de dos personas estrechando la mano"
        class="shadow-tertiary rounded-2xl shadow-lg transition-all duration-300 will-change-transform hover:scale-105 hover:shadow-xl"
      />
    </div>
  </div>
</section>
