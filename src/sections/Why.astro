---
import { smallTitleWhy, textWhy, titleWhy } from 'consts/pagesTitle';
import WhyList from 'components/ui/WhyList.astro';
---

<section
  class="relative flex w-full flex-col items-center justify-center gap-4 bg-black/60 px-4 py-40"
>
  <div class="flex w-full max-w-[1200px]">
    <article class="z-10 flex w-full flex-col gap-12 lg:w-2/3">
      <header class="flex w-full flex-col items-center gap-5 md:w-[38rem] md:items-start">
        <p
          class="bg-primary text-gradient-secondary inline-block rounded-2xl px-4 py-1 text-sm font-medium duration-300 md:text-xl"
          role="note"
        >
          {smallTitleWhy}
        </p>
        <h2
          class="text-secondary text-center text-2xl font-bold uppercase duration-300 sm:text-4xl md:text-start md:text-5xl"
        >
          {titleWhy}
        </h2>
      </header>

      <p
        class="text-md text-secondary w-full text-center font-medium duration-300 sm:text-lg md:w-[40rem] md:text-start md:text-2xl"
      >
        {textWhy}
      </p>

      <WhyList />
    </article>

    <aside
      class="absolute bottom-1/2 left-4 right-4 top-1/2 flex items-center justify-center md:left-auto lg:relative lg:w-1/3"
    >
      <div
        class="lg:shadow-tertiary/80 relative overflow-hidden rounded-2xl bg-transparent duration-300 lg:shadow-md lg:hover:shadow-lg"
        aria-hidden="true"
      >
        <div
          class="bg-gradient-primary/80 sm:bg-gradient-primary/70 lg:bg-gradient-primary/0 absolute h-full w-full backdrop-blur-sm duration-300 lg:backdrop-blur-none"
          aria-hidden="true"
        >
        </div>

        <picture>
          <source srcset="images/img-why.webp" type="image/webp" />
          <img
            src="images/img-why.webp"
            alt="Imagen de dos personas estrechando la mano"
            loading="lazy"
            width="400"
            height="300"
            class="h-auto w-full"
          />
        </picture>
      </div>
    </aside>
  </div>
</section>
