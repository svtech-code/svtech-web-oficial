---
import { ClientRouter } from 'astro:transitions';

import 'styles/global.css';
import { fixedTitle } from 'consts/pagesTitle';
import Header from 'components/Header.astro';
import Footer from 'components/Footer.astro';

interface Props {
  title: string;
}

const { title = fixedTitle } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preload de las fuentes para que no se vea el cambio de fuente al cargar la pagina -->
    <link
      rel="preload"
      href="/fonts/poppins-latin-400-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/poppins-latin-500-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/poppins-latin-700-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <!-- prueba para barra superior e inferior de moviles -->
    <meta name="theme-color" content="#00252d" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#00252d" />

    <meta name="description" content="Soporte Informático y Desarrollo de Aplicaciones Web" />

    <meta property="og:url" content="https://www.svtech.cl" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Sv Tech" />
    <meta
      property="og:description"
      content="Soporte Informático y Desarrollo de Aplicaciones Web"
    />
    <meta property="og:image" content="https://www.svtech.cl/og.png" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Sv Tech" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@svtech" />
    <meta name="twitter:creator" content="@svtech" />
    <meta name="twitter:title" content="Soporte Informático y Desarrollo de Aplicaciones Web" />
    <meta
      name="twitter:description"
      content="Evento de boxeo aficionado entre streamers y creadores de contenido, organizado por Ibai Llanos"
    />

    <ClientRouter />
  </head>
  <body>
    <div
      id="smoke-screen"
      class="animate-fade-out pointer-events-none fixed inset-0 z-50 bg-gradient-to-br from-[#00252d] to-[#0096b8]"
    >
    </div>

    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, #001217, #00252d);
    background-attachment: fixed;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @keyframes fade-out {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }

  .animate-fade-out {
    animation: fade-out 0.8s ease-in-out forwards;
  }
</style>
