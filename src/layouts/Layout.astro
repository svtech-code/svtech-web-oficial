---
import { ClientRouter } from 'astro:transitions';
import SpeedInsights from '@vercel/speed-insights/astro';

import 'styles/global.css';
import { fixedTitle } from 'consts/pagesTitle';
import Header from 'components/Header.astro';
import Footer from 'components/Footer.astro';

interface Props {
  title: string;
}

const { title = fixedTitle } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/images/svtech-icon-touch.png" />

    <!-- Preconnect -->
    <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin />

    <!-- preloading web fonts -->

    <link
      rel="preload"
      href="/fonts/poppins-latin-400-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <link
      rel="preload"
      href="/fonts/poppins-latin-500-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <link
      rel="preload"
      href="/fonts/poppins-latin-700-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- theme for the top bar of the browser in mobile version -->
    <meta name="theme-color" content="#001217" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="mobile-web-app-status-bar-style" content="#001217" />

    <meta
      name="description"
      content="Soporte Informático y Desarrollo de Aplicaciones Web a Medida"
    />

    <meta property="og:url" content="https://www.svtech.cl" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Sv Tech" />
    <meta
      property="og:description"
      content="Soporte Informático y Desarrollo de Aplicaciones Web a Medida"
    />
    <meta property="og:image" content="https://www.svtech.cl/og.png" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Sv Tech" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@svtech" />
    <meta name="twitter:creator" content="@svtech" />
    <meta name="twitter:title" content="Soporte Informático y Desarrollo de Aplicaciones Web" />
    <meta
      name="twitter:description"
      content="Soporte Informático y Desarrollo de Aplicaciones Web a Medida"
    />

    <ClientRouter />

    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-NX19ERRPWS"></script>

    <script type="text/partytown" is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-NX19ERRPWS');
    </script>
  </head>

  <body>
    <div
      id="smoke-screen"
      class="animate-fade-out pointer-events-none fixed inset-0 z-50 bg-gradient-to-br from-[#00252d] to-[#0096b8]"
    >
    </div>

    <Header />

    <main>
      <slot />
    </main>

    <Footer />

    <SpeedInsights />
  </body>
</html>

<style>
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, #001217, #00252d);
    background-attachment: fixed;
  }

  main {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* ✅ Animación optimizada para fade-out */
  @keyframes fade-out {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }

  .animate-fade-out {
    animation: fade-out 0.8s ease-in-out forwards;
    /* ✅ Performance hint para animación de opacidad */
    will-change: opacity;
  }
</style>
