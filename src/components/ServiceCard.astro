---
interface Props {
  icon?: any;
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<article
  class="border-primary shadow-primary/80 relative flex w-full max-w-[400px] flex-col rounded-2xl border p-7 shadow-sm transition-shadow duration-300 hover:shadow-lg"
>
  <header class="text-secondary-size text-primary font-semibold">
    <h3>{title}</h3>
  </header>

  <section class="pb-8 pt-4">
    <p class="line-clamp-3 font-medium">{description}</p>
  </section>

  <footer>
    <button
      aria-label=`Botón para ver más sobre el servicio ${title}`
      class="text-tertiary origin-left cursor-pointer font-medium transition-transform duration-300 will-change-transform hover:scale-105"
      >Saber más</button
    >
  </footer>
</article>

