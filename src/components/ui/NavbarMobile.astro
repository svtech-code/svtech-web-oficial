import NavLink from './NavLink.astro';
import NavbarContactButton from './NavbarContactButton.astro';
---

<div
  id="content-navbar-mobile"
  class="fixed top-0 right-0 h-full w-0 bg-primary/20 duration-300 lg:hidden"
>
  <!-- nav mobile -->
  <nav
    id="navbar-mobile"
    role="navigation"
    aria-label="barra de navegaciÃ³n mobile"
