---
import Icon from './Icon.astro';
---

<button
  type="button"
  id="scroll-to-top"
  class="group pointer-events-none fixed right-4 bottom-8 z-50 flex h-12 w-12 cursor-pointer items-center justify-center rounded-full bg-primary opacity-0 shadow-lg duration-300 hover:shadow-tertiary/40 focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:outline-none sm:right-6 sm:bottom-6 sm:h-14 sm:w-14 md:h-16 md:w-16"
  aria-label="Volver al inicio"
  tabindex="-1"
>
  <Icon name="upArrow" class="arrow-hover h-auto w-7 sm:w-8 md:w-9" />
</button>

<style>
  @keyframes arrowFloat {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  .hover-scale:hover {
    transform: scale(1.1);
  }

  @media (min-width: 640px) {
    .group:hover .arrow-hover {
      animation: arrowFloat 1.5s ease-in-out infinite;
    }
  }
</style>

<script>
  import { initScrollToTop } from 'lib/scroll-to-top';

  initScrollToTop({
    buttonId: 'scroll-to-top',
    triggerElementId: 'services',
  });
</script>
