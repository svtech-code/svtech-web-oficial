---
// src/components/ui/FormButton.astro
export interface Props {
  id: string;
  type?: 'button' | 'submit';
  variant?: 'primary' | 'secondary';
  disabled?: boolean;
  loading?: boolean;
  class?: string;
  text: string;
}

const {
  id,
  type = 'button',
  variant = 'primary',
  disabled = false,
  loading = false,
  class: additionalClass = '',
  text,
} = Astro.props;

const baseClass =
  'font-medium py-3 px-6 rounded-lg transition-all duration-200 focus:ring-4 disabled:opacity-50 disabled:cursor-not-allowed';
const variantClass =
  variant === 'primary'
    ? 'bg-primary hover:bg-primary/80 focus:ring-blue-200'
    : 'bg-gray-200 hover:bg-gray-300 focus:ring-gray-200';
---

<button
  id={id}
  type={type}
  aria-label="Enviar formulario"
  disabled={disabled || loading}
  class={`${baseClass} ${variantClass} ${additionalClass}`}
>
  {
    loading ? (
      <span class="flex items-center justify-center">
        <svg
          class="-ml-1 mr-3 h-5 w-5 animate-spin text-current"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
        >
          <circle
            class="opacity-25"
            cx="12"
            cy="12"
            r="10"
            stroke="currentColor"
            stroke-width="4"
          />
          <path
            class="opacity-75"
            fill="currentColor"
            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
          />
        </svg>
        Enviando...
      </span>
    ) : (
      <span>{text}</span>
    )
  }
</button>
