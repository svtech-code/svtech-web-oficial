---
// componentizar el boton de ver mas pero ver que pasa con el script
interface Props {
  section: string;
  mobileLimit: number;
  tabletLimit: number;
}

const { section, mobileLimit, tabletLimit } = Astro.props;
---

<footer class="flex w-40 items-center justify-center">
  <button
    id={`${section}-see-more-btn`}
    data-mobile-limit={mobileLimit}
    data-tablet-limit={tabletLimit}
    aria-label={`Ver más ${section}`}
    class="relative flex w-full cursor-pointer items-center justify-center overflow-hidden rounded-lg p-2 text-lg text-gradient-secondary duration-500 hover:scale-105 hover:shadow-sm hover:shadow-tertiary focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:outline-none"
  >
    <span class="see-more-text">Ver más</span>
  </button>
</footer>

<style>
  @reference "../../styles/global.css";

  button {
    @apply bg-gradient-to-r from-primary via-[#00D0FF] to-primary;
    background-size: 200% 100%;
    animation: shimmer 3s linear infinite;
    will-change: background-position;
  }

  button::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    @apply bg-gradient-to-r from-transparent via-primary/40 to-transparent;
    transform: rotate(30deg);
    animation: shine 3s linear infinite;
    will-change: transform;
  }
</style>
