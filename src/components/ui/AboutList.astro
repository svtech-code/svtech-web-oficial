---
import { COMPANY_VALUES } from 'consts/about';
---

<ul class="flex flex-col gap-5 text-center text-gradient-secondary sm:flex-row">
  {
    COMPANY_VALUES.map((value) => (
      <li class="flex items-center justify-center rounded-2xl bg-primary px-4 py-1 text-lg font-medium text-gradient-secondary duration-300 hover:scale-105 sm:px-3 sm:text-xl">
        {value}
      </li>
    ))
  }
</ul>
