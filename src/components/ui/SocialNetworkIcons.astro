---
import { SOCIAL } from 'consts/social';
import Icon from './Icon.astro';

interface Props {
  class?: string;
}

const { class: additionalClasses } = Astro.props;
const baseClasses = 'flex justify-center';
const navClasses = additionalClasses ? `${baseClasses} ${additionalClasses}` : baseClasses;
---

<nav aria-label="Redes sociales" class={navClasses}>
  {
    SOCIAL.map(({ name, url, label }) => (
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={label}
        title={label}
        class="rounded-full p-1 focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:outline-none"
      >
        <Icon
          name={name}
          class="h-auto w-8 drop-shadow-lg duration-300 hover:scale-110 hover:drop-shadow-primary sm:w-11"
        />
      </a>
    ))
  }
</nav>
